<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Editar Pagamento</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                 <div class="btn-group mr-2">
                <a class="btn btn-sm btn-outline-info" href="/pagamento" role="button">Listar</a>
                <a class="btn btn-sm btn-outline-primary" href="/vis-pagamento/{{id}}" role="button">Visualizar</a>
                <a class="btn btn-sm btn-outline-danger" href="/del-pagamento/{{id}}" role="button">Apagar</a>
              </div>
            </div>
          </div>

<form action="/update-pagamento/{{id}}" method="POST">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            <input type="text" name="nome" class="form-control" id="nome" value="{{nome}}" placeholder="Nome completo">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Valor</label>
        <div class="col-sm-10">
            <input type="text" name="valor" class="form-control" id="nome" value="{{valor}}" placeholder="Digite o valor">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-sm btn-outline-warning">Salvar</button>
        </div>
    </div>

</form>